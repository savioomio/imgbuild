{
  "name": "imgbuild",
  "private": true,
  "version": "1.0.2",
  "description": "Desktop app for image processing - resize, compress, convert to WebP",
  "main": "electron/main.js",
  "author": "savioomio",
  "repository": {
    "type": "git",
    "url": "https://github.com/savioomio/imgbuild.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder -wml",
    "electron:build:win": "vite build && electron-builder --win",
    "electron:build:mac": "vite build && electron-builder --mac",
    "electron:build:linux": "vite build && electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.563.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.savioomio.imgbuild",
    "productName": "ImgBuild",
    "copyright": "Copyright Â© 2024 savioomio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "icon.png"
    ],
    "publish": {
      "provider": "github",
      "owner": "savioomio",
      "repo": "imgbuild"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png",
      "category": "public.app-category.photography"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Graphics"
    }
  }
}
